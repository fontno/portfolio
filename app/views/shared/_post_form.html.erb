<%= form_for @post, html: { multipart: true } do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.text_area :text, placeholder: "Create a new post" %>
  </div>

  <div class="#">
    <%= f.file_field :image %>
  </div>

  <div class="#">
    <%= f.submit "Submit", class: "btn" %>
  </div>

<% end %>
