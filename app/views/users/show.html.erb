<div class="row">
  <aside class="span4">
    <section>
      <h1><%= @user.email %>
      <%= gravatar(@user) %>
      </h1>
    </section>
    <section>
      <%= render 'shared/relationships' %>
    </section>
    <section>
      <%= render 'relationships_form' %>
    </section>
  </aside>

  <div class="span8">
    <ol class="posts">
      <% if @user.posts.any? %>
        <%= render @posts %>
      <% end %>
    </ol>
  </div>
</div>
